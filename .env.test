# .env.test
# Override default configurations for testing

# Use file-based SQLite for tests (more reliable than in-memory)
DATABASE_URL="pgsql://test_user:Secret123@127.0.0.1:5432/news_app_test_db?serverVersion=15&charset=utf8"

# Alternative: Use in-memory SQLite (faster but may have issues)
# DATABASE_URL="sqlite:///:memory:"

# Disable external services in tests
MAILER_DSN=null://null

# Test upload directory parameter
APP_UPLOADS_DIRECTORY='%kernel.project_dir%/var/test_uploads'

# Kernel environment
APP_ENV=test
APP_DEBUG=true

MESSENGER_TRANSPORT_DSN=sync://


