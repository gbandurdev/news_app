{% extends 'public/base.html.twig' %}

{% block title %}{{ category.title }} - News Portal{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="breadcrumb-item active">{{ category.title }}</li>
                </ol>
            </nav>

            <h1 class="mb-4">{{ category.title }}</h1>

            {% if news is empty %}
                <div class="alert alert-info">
                    <h4>No news found</h4>
                    <p>There are currently no news articles in this category.</p>
                </div>
            {% else %}
                <div class="row">
                    {% for article in news %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                {% if article.hasImage %}
                                    <img src="{{ asset('uploads/news_images/' ~ article.imageUrl('medium')) }}"
                                         class="card-img-top"
                                         alt="{{ article.image.altText ?: article.title }}"
                                         style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                         style="height: 200px;">
                                        <span class="text-muted">No Image</span>
                                    </div>
                                {% endif %}

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a href="{{ path('app_news_show', {id: article.id}) }}"
                                           class="text-decoration-none">
                                            {{ article.title }}
                                        </a>
                                    </h5>
                                    <p class="card-text flex-grow-1">{{ article.shortDescription|slice(0, 150) }}...</p>
                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            {{ article.insertDate|date('M d, Y') }} â€¢ {{ article.views }} views
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <nav aria-label="News pagination">
                        <ul class="pagination justify-content-center">
                            {% if currentPage > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_category_show', {id: category.id, page: currentPage - 1}) }}">
                                        Previous
                                    </a>
                                </li>
                            {% endif %}

                            {% for page in 1..totalPages %}
                                <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('app_category_show', {id: category.id, page: page}) }}">
                                        {{ page }}
                                    </a>
                                </li>
                            {% endfor %}

                            {% if currentPage < totalPages %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_category_show', {id: category.id, page: currentPage + 1}) }}">
                                        Next
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                {% endif %}
            {% endif %}
        </div>
    </div>
{% endblock %}
