{% extends 'public/base.html.twig' %}

{% block title %}Home - News Portal{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Latest News by Category</h1>

            {% if categories is empty %}
                <div class="alert alert-info">
                    <h4>No categories found</h4>
                    <p>There are currently no news categories available.</p>
                </div>
            {% else %}
                {% for category in categories %}
                    <div class="category-section mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h3">{{ category.title }}</h2>
                            <a href="{{ path('app_category_show', {id: category.id}) }}" class="btn btn-outline-primary">
                                View All
                            </a>
                        </div>

                        {% set latestNews = category.latestNews %}
                        {% if latestNews is empty %}
                            <p class="text-muted">No news in this category yet.</p>
                        {% else %}
                            <div class="row">
                                {% for news in latestNews %}
                                    <div class="col-md-4 mb-4">
                                        <div class="card h-100">
                                            {% if news.hasImage %}
                                                <img src="{{ asset('uploads/news/' ~ news.imageName) | imagine_filter('news_medium') }}"
                                                     class="card-img-top"
                                                     alt="{{ news.imageAltText ?: news.title }}"
                                                     style="height: 200px; object-fit: cover;">
                                            {% else %}
                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                     style="height: 200px;">
                                                    <span class="text-muted">No Image</span>
                                                </div>
                                            {% endif %}

                                            <div class="card-body d-flex flex-column">
                                                <h5 class="card-title">
                                                    <a href="{{ path('app_news_show', {id: news.id}) }}"
                                                       class="text-decoration-none">
                                                        {{ news.title }}
                                                    </a>
                                                </h5>
                                                <p class="card-text flex-grow-1">{{ news.shortDescription|slice(0, 150) }}...</p>
                                                <div class="mt-auto">
                                                    <small class="text-muted">
                                                        {{ news.insertDate|date('M d, Y') }}
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    {% if not loop.last %}
                        <hr class="my-5">
                    {% endif %}
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
