{% extends 'admin/base.html.twig' %}

{% block title %}Manage News - Admin{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Manage News
                    <small class="text-muted">({{ totalItems }} total)</small>
                </h1>
                <a href="{{ path('app_admin_news_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Article
                </a>
            </div>

            {# Search and Filter Bar #}
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text"
                                   class="form-control"
                                   id="search"
                                   name="search"
                                   value="{{ search }}"
                                   placeholder="Search by title, description, or category...">
                        </div>
                        <div class="col-md-2">
                            <label for="sort" class="form-label">Sort by</label>
                            <select class="form-select" id="sort" name="sort">
                                <option value="insertDate" {{ sortBy == 'insertDate' ? 'selected' : '' }}>Date</option>
                                <option value="title" {{ sortBy == 'title' ? 'selected' : '' }}>Title</option>
                                <option value="views" {{ sortBy == 'views' ? 'selected' : '' }}>Views</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="order" class="form-label">Order</label>
                            <select class="form-select" id="order" name="order">
                                <option value="DESC" {{ order == 'DESC' ? 'selected' : '' }}>Descending</option>
                                <option value="ASC" {{ order == 'ASC' ? 'selected' : '' }}>Ascending</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="limit" class="form-label">Per page</label>
                            <select class="form-select" id="limit" name="limit">
                                <option value="5" {{ limit == 5 ? 'selected' : '' }}>5</option>
                                <option value="10" {{ limit == 10 ? 'selected' : '' }}>10</option>
                                <option value="25" {{ limit == 25 ? 'selected' : '' }}>25</option>
                                <option value="50" {{ limit == 50 ? 'selected' : '' }}>50</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <a href="{{ path('app_admin_news_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Clear
                            </a>
                        </div>
                        {# Preserve current page when searching #}
                        <input type="hidden" name="page" value="1">
                    </form>
                </div>
            </div>

            {% if news is empty %}
                <div class="alert alert-info">
                    <h4>{% if search %}No results found{% else %}No news articles found{% endif %}</h4>
                    <p>
                        {% if search %}
                            Try adjusting your search terms or <a href="{{ path('app_admin_news_index') }}">clear the search</a>.
                        {% else %}
                            Start by <a href="{{ path('app_admin_news_new') }}">creating your first news article</a>.
                        {% endif %}
                    </p>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>
                                        <a href="{{ path('app_admin_news_index', {
                                            sort: 'title',
                                            order: sortBy == 'title' and order == 'ASC' ? 'DESC' : 'ASC',
                                            search: search,
                                            limit: limit,
                                            page: currentPage
                                        }) }}" class="text-decoration-none text-dark">
                                            Title
                                            {% if sortBy == 'title' %}
                                                <i class="bi bi-chevron-{{ order == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Categories</th>
                                    <th>
                                        <a href="{{ path('app_admin_news_index', {
                                            sort: 'insertDate',
                                            order: sortBy == 'insertDate' and order == 'ASC' ? 'DESC' : 'ASC',
                                            search: search,
                                            limit: limit,
                                            page: currentPage
                                        }) }}" class="text-decoration-none text-dark">
                                            Published
                                            {% if sortBy == 'insertDate' %}
                                                <i class="bi bi-chevron-{{ order == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>
                                        <a href="{{ path('app_admin_news_index', {
                                            sort: 'views',
                                            order: sortBy == 'views' and order == 'ASC' ? 'DESC' : 'ASC',
                                            search: search,
                                            limit: limit,
                                            page: currentPage
                                        }) }}" class="text-decoration-none text-dark">
                                            Views
                                            {% if sortBy == 'views' %}
                                                <i class="bi bi-chevron-{{ order == 'ASC' ? 'up' : 'down' }}"></i>
                                            {% endif %}
                                        </a>
                                    </th>
                                    <th>Comments</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for article in news %}
                                    <tr>
                                        <td>
                                            {% if article.hasImage %}
                                                <img src="{{ asset('uploads/news/' ~ article.imageName) | imagine_filter('news_thumbnail') }}"
                                                     alt="{{ article.title }}"
                                                     class="img-thumbnail"
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                            {% else %}
                                                <div class="bg-light d-flex align-items-center justify-content-center img-thumbnail"
                                                     style="width: 60px; height: 60px;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            {% endif %}

                                        </td>
                                        <td>
                                            <div class="fw-bold">
                                                {{ article.title|length > 60 ? article.title|slice(0, 60) ~ '...' : article.title }}
                                            </div>
                                            <small class="text-muted">
                                                {{ article.shortDescription|length > 80 ? article.shortDescription|slice(0, 80) ~ '...' : article.shortDescription }}
                                            </small>
                                        </td>
                                        <td>
                                            {% if article.categories is empty %}
                                                <span class="text-muted">No categories</span>
                                            {% else %}
                                                {% for category in article.categories %}
                                                    <span class="badge bg-secondary me-1">{{ category.title }}</span>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>{{ article.insertDate|date('M d, Y g:i A') }}</td>
                                        <td>
                                            <span class="badge bg-info">{{ article.views }}</span>
                                        </td>
                                        <td>
                                            {% if article.comments|length > 0 %}
                                                <a href="{{ path('app_admin_comment_index', {id: article.id}) }}"
                                                   class="btn btn-sm btn-outline-info">
                                                    {{ article.comments|length }}
                                                </a>
                                            {% else %}
                                                <span class="text-muted">0</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_news_show', {id: article.id}) }}"
                                                   class="btn btn-sm btn-outline-secondary"
                                                   target="_blank"
                                                   title="View">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_admin_news_edit', {id: article.id}) }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form method="post"
                                                      action="{{ path('app_admin_news_delete', {id: article.id}) }}"
                                                      style="display: inline;"
                                                      onsubmit="return confirm('Are you sure you want to delete this article? This action cannot be undone.')">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                    <button class="btn btn-sm btn-outline-danger" type="submit" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        {# Pagination #}
                        {% if totalPages > 1 %}
                            <nav aria-label="News pagination" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    {# Previous Page #}
                                    {% if currentPage > 1 %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_admin_news_index', {
                                                page: currentPage - 1,
                                                sort: sortBy,
                                                order: order,
                                                search: search,
                                                limit: limit
                                            }) }}">
                                                <i class="bi bi-chevron-left"></i> Previous
                                            </a>
                                        </li>
                                    {% endif %}

                                    {# Page Numbers #}
                                    {% set startPage = max(1, currentPage - 2) %}
                                    {% set endPage = min(totalPages, currentPage + 2) %}

                                    {% if startPage > 1 %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_admin_news_index', {
                                                page: 1,
                                                sort: sortBy,
                                                order: order,
                                                search: search,
                                                limit: limit
                                            }) }}">1</a>
                                        </li>
                                        {% if startPage > 2 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                    {% endif %}

                                    {% for page in startPage..endPage %}
                                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                            <a class="page-link" href="{{ path('app_admin_news_index', {
                                                page: page,
                                                sort: sortBy,
                                                order: order,
                                                search: search,
                                                limit: limit
                                            }) }}">{{ page }}</a>
                                        </li>
                                    {% endfor %}

                                    {% if endPage < totalPages %}
                                        {% if endPage < totalPages - 1 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_admin_news_index', {
                                                page: totalPages,
                                                sort: sortBy,
                                                order: order,
                                                search: search,
                                                limit: limit
                                            }) }}">{{ totalPages }}</a>
                                        </li>
                                    {% endif %}

                                    {# Next Page #}
                                    {% if currentPage < totalPages %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_admin_news_index', {
                                                page: currentPage + 1,
                                                sort: sortBy,
                                                order: order,
                                                search: search,
                                                limit: limit
                                            }) }}">
                                                Next <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </nav>

                            {# Pagination Info #}
                            <div class="text-center text-muted">
                                Showing {{ (currentPage - 1) * limit + 1 }} to {{ min(currentPage * limit, totalItems) }} of {{ totalItems }} entries
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
