{% extends 'admin/base.html.twig' %}

{% block title %}Edit News - {{ news.title }} - Admin{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_admin_news_index') }}">News</a></li>
                    <li class="breadcrumb-item active">Edit: {{ news.title|slice(0, 30) }}...</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Edit News Article</h1>
                <div class="btn-group">
                    <a href="{{ path('app_news_show', {id: news.id}) }}"
                       class="btn btn-outline-info"
                       target="_blank">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a href="{{ path('app_admin_comment_index', {id: news.id}) }}"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-chat"></i> Comments ({{ news.comments|length }})
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.shortDescription, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.shortDescription) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.content) }}
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                {{ form_label(form.imageFile, null, {'label_attr': {'class': 'form-label'}}) }}
                                {% if news.hasImage %}
                                    <img src="{{ asset('uploads/news/' ~ news.imageName) | imagine_filter('news_medium') }}"
                                         class="card-img-top mb-2 mt-2"
                                         alt="{{ news.imageAltText ?: news.title }}"
                                         style="height: 200px; object-fit: contain;">
                                {% endif %}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.imageFile) }}
                                <div class="form-text">
                                    {% if news.image %}
                                        Leave empty to keep current image, or upload a new one to replace it.
                                    {% else %}
                                        Upload an image for this article.
                                    {% endif %}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.categories, null, {'label_attr': {'class': 'form-label'}}) }}
                                <div class="border rounded p-3 bg-light">
                                    <div class="row">
                                        {% for choice in form.categories %}
                                            <div class="col-md-6 col-lg-4 mb-2">
                                                <div class="form-check">
                                                    {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                                                    {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                                {{ form_errors(form.categories) }}
                            </div>

                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0">Article Statistics</h6>
                                </div>
                                <div class="card-body">
                                    <p class="mb-1"><strong>Views:</strong> {{ news.views }}</p>
                                    <p class="mb-1"><strong>Comments:</strong> {{ news.comments|length }}</p>
                                    <p class="mb-0"><strong>Published:</strong> {{ news.insertDate|date('M d, Y g:i A') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_admin_news_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to News
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Update Article
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
