{% extends 'admin/base.html.twig' %}

{% block title %}Comments for {{ news.title|slice(0, 30) }}... - Admin{% endblock %}

{% block body %}
    <div class="row">
       <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_news_index') }}">News</a></li>
                <li class="breadcrumb-item active">Comments: {{ news.title|slice(0, 30) }}...</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Manage Comments</h1>
            <div class="btn-group">
                <a href="{{ path('app_news_show', {id: news.id}) }}"
                   class="btn btn-outline-info"
                   target="_blank">
                    <i class="bi bi-eye"></i> View Article
                </a>
                <a href="{{ path('app_admin_news_edit', {id: news.id}) }}"
                   class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit Article
                </a>
            </div>
        </div>

        <!-- Article Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Article Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    {% if news.hasImage %}
                    <div class="col-md-3">
                        <img src="{{ asset('uploads/news_images/' ~ news.imageUrl('thumbnail')) }}"
                             class="img-fluid rounded"
                             alt="{{ news.title }}">
                    </div>
                    <div class="col-md-9">
                        {% else %}
                        <div class="col-12">
                            {% endif %}
                            <h6>{{ news.title }}</h6>
                            <p class="text-muted mb-2">{{ news.shortDescription }}</p>
                            <small class="text-muted">
                                Published: {{ news.insertDate|date('M d, Y g:i A') }} •
                                Views: {{ news.views }} •
                                Comments: {{ comments|length }}
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments -->
            {% if comments is empty %}
                <div class="alert alert-info">
                    <h4>No comments yet</h4>
                    <p>This article doesn't have any comments yet.</p>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Comments ({{ comments|length }})</h5>
                    </div>
                    <div class="card-body">
                        {% for comment in comments %}
                            <div class="comment-item border rounded p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="mb-0">
                                                <i class="bi bi-person-circle me-1"></i>
                                                {{ comment.author }}
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                {{ comment.createdAt|date('M d, Y g:i A') }}
                                            </small>
                                        </div>
                                        <div class="comment-content">
                                            <p class="mb-0">{{ comment.content|nl2br }}</p>
                                        </div>
                                        <div class="comment-meta mt-2">
                                            <small class="text-muted">
                                                Comment ID: #{{ comment.id }} •
                                                Length: {{ comment.content|length }} characters
                                            </small>
                                        </div>
                                    </div>
                                    <div class="ms-3">
                                        <form method="post"
                                              action="{{ path('app_admin_comment_delete', {id: comment.id}) }}"
                                              style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this comment?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                            <button class="btn btn-sm btn-outline-danger" type="submit" title="Delete Comment">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
    </div>
{% endblock %}
