{% extends 'admin/base.html.twig' %}

{% block title %}Manage Categories - Admin{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Manage Categories</h1>
                <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>

            {% if categories is empty %}
                <div class="alert alert-info">
                    <h4>No categories found</h4>
                    <p>Start by <a href="{{ path('app_admin_category_new') }}">creating your first category</a>.</p>
                </div>
            {% else %}
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Category Name</th>
                                    <th>News Count</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>
                                            <a href="{{ path('app_category_show', {id: category.id}) }}"
                                               target="_blank"
                                               class="fw-bold text-decoration-none">
                                                {{ category.title }}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ category.news|length }}</span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_category_show', {id: category.id}) }}"
                                                   class="btn btn-sm btn-outline-secondary"
                                                   target="_blank"
                                                   title="View Category">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_admin_category_edit', {id: category.id}) }}"
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Edit Category">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                {% if category.news|length == 0 %}
                                                    <form method="post"
                                                          action="{{ path('app_admin_category_delete', {id: category.id}) }}"
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to delete this category?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                        <button class="btn btn-sm btn-outline-danger" type="submit" title="Delete Category">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                {% else %}
                                                    <button class="btn btn-sm btn-outline-danger"
                                                            disabled
                                                            title="Cannot delete category with news articles">
                                                        <i class="bi bi-lock"></i>
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
